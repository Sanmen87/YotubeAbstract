# Telegram bot token from BotFather
TELEGRAM_BOT_TOKEN=
# Comma-separated Telegram user IDs allowed to use bot
ALLOWED_TELEGRAM_USER_IDS=
# OpenAI API key for summarization/outline generation
OPENAI_API_KEY=
# OpenAI model name
OPENAI_MODEL=gpt-4o-mini
# PostgreSQL DSN for SQLAlchemy
DATABASE_URL=postgresql+psycopg://postgres:postgres@postgres:5432/app
# Redis URL for Celery broker/result backend
REDIS_URL=redis://redis:6379/0
# Max allowed YouTube video duration in minutes
MAX_VIDEO_MINUTES=90
# faster-whisper model size: tiny/base/small/medium/large-v3...
WHISPER_MODEL_SIZE=small
# Whisper device: cpu or cuda
WHISPER_DEVICE=cpu
# Whisper compute type: int8/float16/float32 (depends on device)
WHISPER_COMPUTE_TYPE=int8
# Application log level
LOG_LEVEL=INFO
# Path to browser-exported cookies.txt (Netscape format) inside container
YTDLP_COOKIES_FILE=/data/cookies.txt
